{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": { "@/*": ["./*"] }
	},
	"include": [
		"app/**/*.ts",
		"app/**/*.tsx",
		"hooks/**/*.ts",
		"hooks/**/*.tsx",
		"locales/**/*.json",
		"types/**/*.d.ts",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"types/env.d.ts"
	]
}
